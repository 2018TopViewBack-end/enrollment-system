<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.topview.dao.organization.UserMapper">

    <resultMap id="BaseResultMap" type="org.topview.entity.organization.po.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="tel" property="tel" jdbcType="VARCHAR"/>
        <result column="wechat" property="wechat"
        <result column="role_id" property="roleId" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List" >
        id, username, password, tel, wechat, role_id
    </sql>

    <insert id="insertUser" parameterType="org.topview.entity.organization.po.User" useGeneratedKeys="true">
        INSERT INTO user (username,password,tel,wechat,role_id)
        VALUES (#{username},#{password},#{tel},#{wechat},#{role_id})
    </insert>
    <select id="selectUserByUsername" resultType="org.topview.entity.organization.po.User" parameterType="org.topview.entity.organization.po.User">
        <include refid="Base_Column_List" />
    </select>

    <select id="checkOldPassword" resultType="java.lang.Integer">
        select password=md5(#{password}) isEqual from user where id=#{id}
    </select>

    <update id="updatePassword" >
        update user set password=md5(#{password}) where id=#{id}
    </update>

</mapper>